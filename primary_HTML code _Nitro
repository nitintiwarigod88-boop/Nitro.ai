}function openLink(url){
    // Ask user permission before opening
    if(confirm(`Do you want to open this link?\n${url}`)){
        window.open(url, "_blank"); // Opens in a new tab
        return `Opening: ${url}`;
    }
    return "Link opening cancelled by user.";
}function nitroBrain(text){
    text = text.toLowerCase();

    // Check if text contains a link
    const urlPattern = /(https?:\/\/[^\s]+)/g; // Simple URL detection
    const urls = text.match(urlPattern);
    if(urls && urls.length > 0){
        // Open the first URL in the text
        return openLink(urls[0]);
    }

    // Example of other responses
    if(text.includes("hello") || text.includes("hi"))
        return "Hello! Nitro is online and ready to chat.";

    if(text.includes("search"))
        return "Tell me what to search, and I can open it for you.";

    return "Hmmâ€¦ tell me more details.";
}
