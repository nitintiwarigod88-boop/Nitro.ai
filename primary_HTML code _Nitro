        return "Remember, every big journey starts with a single step. Youâ€™ve got this!";

    if(text.includes("fact") || text.includes("learn"))
        return "Did you know? Honey never spoils, even after thousands of years.";

    if(text.includes("search"))
        return "I can help you search. Just tell me what to look up, and Iâ€™ll open Google.";

    if(text.includes("bye") || text.includes("stop"))
        return "Goodbye for now. Call me anytime when you need me.";

    // Default fallback
    return "Hmmâ€¦ letâ€™s dive deeper. Can you give me more details?";
}async function nitroBrain(text){
    const response = await fetch("https://api.openai.com/v1/chat/completions", {
        method: "POST",
        headers: {
            "Authorization": "Bearer YOUR_API_KEY",
            "Content-Type": "application/json"
        },
        body: JSON.stringify({
            model: "gpt-3.5-turbo",
            messages: [{role: "user", content: text}]
        })
    });

    const data = await response.json();
    return data.choices[0].message.content;
